{
  "name": "npm-build-buttercup",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rimraf dist/* && rimraf .tmp",
    "copy:vendor": "cpx \"src/vendor/*.*\" dist/vendor",
    "serve": "browser-sync start --server \"dist\" --files \"dist/assets/css/*.css, dist/assets/js/*.js, dist/*.html, !node_modules/**/*.html\"",
    "scss": "rimraf .tmp && mkdirp .tmp && node-sass --output-style nested -o .tmp src/assets/scss",
    "stylelint": "stylelint src/assets/**/*.scss --syntax scss",
    "postcss": "postcss \".tmp/*.css\" --dir \"dist/assets/css/\" && rimraf .tmp",
    "postcss:prod": "cross-env NODE_ENV=production postcss \".tmp/*.css\" --dir \"dist/assets/css/\" && rimraf .tmp",
    "build:images": "imagemin src/assets/images/* -o dist/assets/images",
    "build:icons": "svgo -f src/assets/images/icons -o dist/assets/images/icons && svg-sprite-generate -d dist/assets/images/icons -o dist/assets/images/icons/sprite.svg",
    "build:css": "npm run stylelint && npm run scss && npm run postcss",
    "build:prodcss": "npm run stylelint && npm run scss && npm run postcss:prod",
    "build:js": "rollup -c",
    "build:prodjs": "cross-env NODE_ENV=production rollup -c",
    "build:html": "pug src/views -o dist --pretty",
    "build:prodhtml": "pug src/views -o dist",
    "build:all": "npm run copy:vendor && npm run build:images && npm run build:icons && npm run build:css && npm run build:js && npm run build:html",
    "build:prod": "npm run copy:vendor && npm run build:images && npm run build:icons && npm run build:prodcss && npm run build:prodjs && npm run build:prodhtml",
    "watch:vendor": "onchange \"src/vendor\" -- npm copy:vendor",
    "watch:images": "onchange \"src/assets/images\" -- npm run build:images",
    "watch:icons": "onchange \"src/assets/images/icons\" -- npm run build:icons",
    "watch:css": "onchange \"src/assets/scss\" -- npm run build:css",
    "watch:js": "onchange \"src/assets/js\" -- npm run build:js",
    "watch:html": "onchange \"src/views\" -- npm run build:html",
    "watch:all": "npm run build:all && npm-run-all -p serve watch:vendor watch:images watch:icons watch:css watch:js watch:html",
    "buttercup:prod": "npm run build:prod",
    "buttercup:build": "npm run build:all",
    "buttercup": "npm run watch:all"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^7.0.1",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-es2015": "^6.24.1",
    "browser-sync": "^2.18.8",
    "cpx": "^1.5.0",
    "css-mqpacker": "^6.0.0",
    "cssnano": "^3.10.0",
    "imagemin-cli": "^3.0.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.5.2",
    "npm-run-all": "^4.0.2",
    "onchange": "^3.2.1",
    "postcss-cli": "^4.0.0",
    "pug-cli": "^1.0.0-alpha6",
    "rimraf": "^2.6.1",
    "rollup": "^0.41.6",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-eslint": "^3.0.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-replace": "^1.1.1",
    "rollup-plugin-strip": "^1.1.1",
    "rollup-plugin-uglify": "^1.0.2",
    "stylelint": "^7.10.1",
    "stylelint-config-standard": "^16.0.0",
    "svg-sprite-generator": "0.0.7",
    "svgo": "^0.7.2"
  },
  "dependencies": {
    "sanitize.css": "^5.0.0"
  }
}
